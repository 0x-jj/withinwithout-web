{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "declaration": true,
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "strict": false,
    "baseUrl": "./",
      "paths": {
        "@/components/*": ["components/*"],
        "@/config/*": ["config/*"],
        "@/lib/*": ["lib/*"],
        "@/pages/*": ["pages/*"],
        "@/public/*": ["public/*"],
        "@/styles/*": ["styles/*"],
        "@/types/*": ["types/*"],
        "@/utils/*": ["utils/*"]
      },
  },
  "exclude": [
    "**/*.spec.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
